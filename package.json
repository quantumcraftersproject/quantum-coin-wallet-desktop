{
  "name": "quantumwallet",
  "productName": "quantumwallet",
  "version": "3.1.4",
  "description": "Quantum Coin",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "author": "Quantum Crafters LLC",
  "license": "MIT",
  "dependencies": {
    "@electron-forge/maker-dmg": "^6.1.1",
    "electron-squirrel-startup": "^1.0.0",
    "ethers": "^6.11.1",
    "sjcl": "^1.0.8"
  },
  "build": {
    "extraResources": [
      "assets/**",
      "theme/**",
      "js/**",
      "lib/**",
      "**"
    ]
  },
  "files": [
    "js/**"
  ],
  "mac": {
    "target": {
      "target": "default",
      "arch": "universal"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/icons/app/icon.ico",
      "appId": "Quantum Coin Wallet"
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.0.5",
    "@electron-forge/maker-rpm": "^6.0.5",
    "@electron-forge/maker-squirrel": "^6.0.5",
    "@electron-forge/maker-zip": "^6.0.5",
    "electron": "^27.1.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "quantumwallet",
        "appCategoryType": "public.app-category.developer-tools",
        "appCopyright": "Copyright Â© 2025 Quantum Crafters LLC",
        "appVersion": "3.1.4",
        "asar": true,
        "icon": "src/assets/icons/app/icon.ico",
        "out": "dist",
        "osxUniversal": {
          "x64ArchFiles": "*"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip"
        }
      ]
    }
  }
}
